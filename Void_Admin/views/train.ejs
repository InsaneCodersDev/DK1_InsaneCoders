    <script>
      function generate(){
        const username= document.getElementById('search').value;
        if(username == ''){
          alert('Please enter username before generating the OTP!!');
          return;
        }
        data={};
        data.username = username;
        var digits = '0123456789'; 
        let OTP = ''; 
        for (let i = 0; i < 4; i++ ) { 
            OTP += digits[Math.floor(Math.random() * 10)]; 
        }  
        document.getElementById('otp').innerHTML= "Your OTP of 4 digits is: " + OTP;
        data.otp = OTP;
        $.ajax({
              url: '/train', 
              type: 'POST',
              contentType: 'application/json',
              data: JSON.stringify(data),                     
              success: function(data) {
                $("#page-top").html(data);
               }
         }); 
      }
    </script>
